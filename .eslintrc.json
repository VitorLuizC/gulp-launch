{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  },
  "globals": {
    "beforeEach": true,
    "afterEach": true,
    "describe": true,
    "it": true
  }
}
